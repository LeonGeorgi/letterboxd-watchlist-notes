{
  "manifest_version": 3,
  "name": "Letterboxd Watchlist Notes",
  "version": "1.0",
  "background": {
    "service_worker": "dist/main.js"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://letterboxd.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://letterboxd.com/*"],
      "js": ["dist/content.js"]
    }
  ],
  "action": {
    "default_popup": "public/popup.html",
    "default_icon": {
      "16": "public/icons/icon16.png",
      "48": "public/icons/icon48.png",
      "128": "public/icons/icon128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["dist/*.js"],
      "matches": ["<all_urls>"]
    }
  ]
}